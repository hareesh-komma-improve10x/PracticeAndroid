<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CheckBoxActivity" >

    <CheckBox
        android:id="@+id/pizza_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="Pizza"
        android:textColor="#2E2929"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/coffee_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Coffee"
        android:textColor="#2E2929"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/pizza_check_box"
        app:layout_constraintStart_toStartOf="@+id/pizza_check_box"
        app:layout_constraintTop_toBottomOf="@+id/pizza_check_box" />

    <CheckBox
        android:id="@+id/burger_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Burger"
        android:textColor="#2E2929"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/coffee_check_box"
        app:layout_constraintStart_toStartOf="@+id/coffee_check_box"
        app:layout_constraintTop_toBottomOf="@+id/coffee_check_box" />

    <Button
        android:id="@+id/order_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="ORDER"
        app:layout_constraintEnd_toEndOf="@+id/coffee_check_box"
        app:layout_constraintStart_toStartOf="@+id/coffee_check_box"
        app:layout_constraintTop_toBottomOf="@+id/burger_check_box" />
</androidx.constraintlayout.widget.ConstraintLayout>